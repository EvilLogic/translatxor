{
    "name": "translatxor",
    "version": "1.0",
    "description": "Flip your bits!",
    "permissions": ["tabs"],
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["translatxor.js"]
        }
      ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html"
    },
    "manifest_version": 2
  }